{
  "name": "@bongo-ai/desktop",
  "version": "1.0.0",
  "description": "Bongo AI Desktop App (Electron)",
  "main": "dist/main.js",
  "scripts": {
    "dev": "electron .",
    "build": "tsc && electron-builder",
    "start:electron": "tsc && electron .",
    "test": "jest",
    "lint": "eslint src --ext .ts"
  },
  "dependencies": {
    "electron": "^27.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.1.0",
    "electron-builder": "^24.6.0",
    "jest": "^29.6.0"
  },
  "build": {
    "appId": "com.bongoai.desktop",
    "productName": "Bongo AI",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.education"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": ["AppImage", "deb"]
    }
  }
}
